<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(BSLayout)">
                <NotAuthorized>
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">很抱歉您无法访问该页面</h4>
                        <p>您可以登录或者创建一个新账号</p>
                        <p>快速跳转到 <a href="login" class="alert-link">登录</a></p>
                        <p>快速跳转到 <a href="register" class="alert-link">注册</a></p>
                        <hr>
                        <p class="mb-0">在登录后您可以访问所有信息</p>
                    </div>
                </NotAuthorized>
                </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(BSLayout)">
                <p role="alert">该页面不存在</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>